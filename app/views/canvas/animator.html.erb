<div data-controller="animator" class="text-slate-100 font-righteous">
  <div class="flex w-full justify-center py-4">
    <h1 class="font-bold text-6xl">Animator</h1>
  </div>
  <div class="flex gap-4 mb-4">
    <canvas id="canvas" data-mapper-target="canvas" data-draw-target="canvas"
      class="bg-white border border border-slate-100">
    </canvas>  
  </div>
  <div class="flex w-full justify-center gap-2">
    <button class="btn-green" data-action="illustrator#dvdCircle">DVD Bounce</button>
    <button class="btn-green" data-action="illustrator#fillBubbles">Rings</button>
    <button class="btn-green" data-action="illustrator#movingCircles">Circles</button>
    <button class="btn-green" data-action="illustrator#growingCircles">Bubbles</button>
    <button class="btn-green" data-action="illustrator#trailCircles">Marbles</button>
    <button class="btn-blue" data-action="mapper#clear">Clear</button>
  </div>
</div>