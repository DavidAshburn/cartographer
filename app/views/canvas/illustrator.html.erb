<div data-controller="draw" class="text-slate-100 font-righteous">
  <div class="flex w-full justify-center py-4">
    <h1 class="font-bold text-6xl">Illustrator</h1>
  </div>
  <div class="flex gap-4 mb-4">
    <canvas id="canvas" data-mapper-target="canvas" data-draw-target="canvas"
      class="bg-white border border border-slate-100">
    </canvas>  
  </div>
  <div class="flex w-full justify-center gap-2">
    <button class="btn-green" data-action="draw#paintCircles">Random</button>
    <button class="btn-green" data-action="draw#driver">Draw</button>
    <button class="btn-blue" data-action="mapper#clear">Clear</button>
  </div>
</div>