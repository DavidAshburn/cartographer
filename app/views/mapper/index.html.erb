<div data-controller="mapper" class="text-slate-100 font-righteous">
  <div class="flex w-full justify-center py-4">
    <h1 class="font-bold text-6xl">Canvas</h1>
  </div>
  <div class="flex gap-4 mb-4">
    <canvas id="canvas" data-mapper-target="canvas"
      class="bg-white border border border-slate-100">
    </canvas>  
  </div>
  <div class="flex w-full justify-center gap-2">
    <button class="btn-green" data-action="mapper#drawBubbles">Paint</button>
    <button class="btn-green" data-action="mapper#randomCircles">Bubbles</button>
    <button class="btn-green" data-action="mapper#movingCircle">DVD</button>
    <button class="btn-green" data-action="mapper#manyCircles">Circles</button>
    <button class="btn-green" data-action="mapper#mouseCircles">Mouse</button>
    <button class="btn-green" data-action="mapper#trailCircles">Trails</button>
    <button class="btn-blue" data-action="mapper#clear">Clear</button>
  </div>
</div>